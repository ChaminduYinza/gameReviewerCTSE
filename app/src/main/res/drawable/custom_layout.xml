<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgGame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:onClick="JumptoSingle"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gardient"/>
    <TextView

        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/textView_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/button_seeall"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:background="@drawable/button_rounded_corners"
        android:text="See All"
        android:textColor="#fff"
        android:textStyle="italic|bold"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:onClick="JumptoPage"
        android:layout_alignTop="@+id/textView_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView_title" />


    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_subheading"
        android:layout_alignLeft="@+id/textView_title"
        android:layout_alignStart="@+id/textView_title"
        android:fontFamily="monospace"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_subheading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:singleLine="true"
        android:textColor="#fff"
        android:text="TextView"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/textView_heading"
        android:layout_alignStart="@+id/textView_heading" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/imageView_cate"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rainbowline"
        android:layout_alignLeft="@+id/imageView_cate"
        android:layout_alignStart="@+id/imageView_cate"
        android:layout_alignRight="@+id/imageView_cate"
        android:layout_alignEnd="@+id/imageView_cate" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/iheart"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/textView_subheading"
        android:layout_alignStart="@+id/textView_subheading"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/textView_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#fff"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:text="36 Likes"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        app:srcCompat="@drawable/ibubble"
        android:layout_alignTop="@+id/textView_like"
        android:layout_toRightOf="@+id/textView_like"
        android:layout_toEndOf="@+id/textView_like" />

    <TextView
        android:id="@+id/textView_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginLeft="12dp"
        android:textColor="#fff"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7"
        android:text="Comments"
        android:textSize="12sp" />

</RelativeLayout>